# MHM Example Environment Configuration
# Copy this file to `.env` and customize values for your local setup.
# Do not commit the real `.env` file to version control.

# =========================
# Core Paths and Data Roots
# =========================
BASE_DATA_DIR=data
USER_INFO_DIR_PATH=data/users
DEFAULT_MESSAGES_DIR_PATH=resources/default_messages

# =================
# Logging (General)
# =================
LOG_LEVEL=WARNING
LOGS_DIR=logs
LOG_BACKUP_DIR=logs/backups
LOG_ARCHIVE_DIR=logs/archive
LOG_FILE_PATH=logs/app.log
LOG_MAX_BYTES=5242880
LOG_BACKUP_COUNT=5
LOG_COMPRESS_BACKUPS=false
DISABLE_LOG_ROTATION=0
TEST_VERBOSE_LOGS=0
MHM_TESTING=0

# ====================
# Per-Component Log Files
# ====================
LOG_MAIN_FILE=logs/app.log
LOG_DISCORD_FILE=logs/discord.log
LOG_AI_FILE=logs/ai.log
LOG_USER_ACTIVITY_FILE=logs/user_activity.log
LOG_ERRORS_FILE=logs/errors.log
LOG_COMMUNICATION_MANAGER_FILE=logs/communication_manager.log
LOG_EMAIL_FILE=logs/email.log
LOG_TELEGRAM_FILE=logs/telegram.log
LOG_UI_FILE=logs/ui.log
LOG_FILE_OPS_FILE=logs/file_ops.log
LOG_SCHEDULER_FILE=logs/scheduler.log

# ==================
# Email Configuration
# ==================
EMAIL_SMTP_USERNAME=your_email@example.com
EMAIL_SMTP_PASSWORD=your_app_password_here
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=465
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_IMAP_PORT=993

# ===================
# Channel Credentials
# ===================
TELEGRAM_BOT_TOKEN=CHANGE_ME_TELEGRAM_TOKEN
TELEGRAM_CHAT_ID=CHANGE_ME_CHAT_ID

DISCORD_BOT_TOKEN=CHANGE_ME_DISCORD_BOT_TOKEN
DISCORD_PUBLIC_KEY=CHANGE_ME_DISCORD_PUBLIC_KEY
DISCORD_AUTO_NGROK=true
DISCORD_WEBHOOK_PORT=8080

# ======================
# LM Studio (Local OpenAI)
# ======================
LM_STUDIO_BASE_URL=http://localhost:1234/v1
LM_STUDIO_MODEL=phi-2
LM_STUDIO_API_KEY=lm-studio

# ==================
# AI Prompt & Behavior
# ==================
AI_SYSTEM_PROMPT_PATH=resources/assistant_system_prompt.txt
AI_USE_CUSTOM_PROMPT=true
AI_TIMEOUT_SECONDS=30
AI_BATCH_SIZE=4
AI_CUDA_WARMUP=false
AI_CACHE_RESPONSES=true

AI_CONNECTION_TEST_TIMEOUT=15
AI_API_CALL_TIMEOUT=15
AI_COMMAND_PARSING_TIMEOUT=15
AI_PERSONALIZED_MESSAGE_TIMEOUT=40
AI_CONTEXTUAL_RESPONSE_TIMEOUT=35
AI_QUICK_RESPONSE_TIMEOUT=8
AI_MAX_RESPONSE_LENGTH=1200
AI_MAX_RESPONSE_WORDS=0
AI_MAX_RESPONSE_TOKENS=300
AI_MIN_RESPONSE_LENGTH=50

AI_CHAT_TEMPERATURE=0.7
AI_COMMAND_TEMPERATURE=0.0
AI_CLARIFICATION_TEMPERATURE=0.1

# ==================
# Caching & Scheduler
# ==================
CONTEXT_CACHE_TTL=300
CONTEXT_CACHE_MAX_SIZE=100
SCHEDULER_INTERVAL=60
AUTO_CREATE_USER_DIRS=true

# =========
# Categories
# =========
CATEGORIES="motivational,health,quotes_to_ponder,word_of_the_day,fun_facts"

# ===============================
# Backups & Developer Diagnostics
# ===============================
BACKUP_RETENTION_DAYS=30
FILE_AUDIT_ENABLED=1
FILE_AUDIT_DIRS=logs,data,tests/data,tests/logs
FILE_AUDIT_POLL_INTERVAL=2
FILE_AUDIT_IGNORE_DIRS=.git,.venv,__pycache__,scripts
FILE_AUDIT_STACK=1
